   "source": [
    "import csv\n",
    "import time\n",
    "import random\n",
    "import os\n",
    "\n",
    "# Zeige das aktuelle Arbeitsverzeichnis an\n",
    "print(\"Aktuelles Arbeitsverzeichnis:\", os.getcwd())\n",
    "\n",
    "# Liste alle Dateien im aktuellen Verzeichnis auf\n",
    "print(\"Dateien im aktuellen Verzeichnis:\")\n",
    "for file in os.listdir():\n",
    "    print(file)\n",
    "\n",
    "# 1. Daten aus der CSV-Datei importieren\n",
    "def import_data(filename):\n",
    "    # Versuche zuerst, die Datei im aktuellen Verzeichnis zu finden\n",
    "    if os.path.exists(filename):\n",
    "        file_path = filename\n",
    "    else:\n",
    "        # Suche in übergeordneten Verzeichnissen\n",
    "        current_dir = os.getcwd()\n",
    "        while True:\n",
    "            parent_dir = os.path.dirname(current_dir)\n",
    "            if parent_dir == current_dir:  # Wurzelverzeichnis erreicht\n",
    "                raise FileNotFoundError(f\"Die Datei {filename} wurde nicht gefunden.\")\n",
    "            file_path = os.path.join(parent_dir, filename)\n",
    "            if os.path.exists(file_path):\n",
    "                break\n",
    "            current_dir = parent_dir\n",
    "    \n",
    "    print(f\"Gefundener Dateipfad: {file_path}\")\n",
    "    numbers = []\n",
    "    with open(file_path, 'r') as file:\n",
    "        csv_reader = csv.reader(file)\n",
    "        for row in csv_reader:\n",
    "            numbers.extend(map(float, row))\n",
    "    return numbers\n",
    "\n",
    "# 2. Eigener Sortieralgorithmus (Bucket Sort)\n",
    "def bucket_sort(arr):\n",
    "    # Finde Minimum und Maximum\n",
    "    min_val, max_val = min(arr), max(arr)\n",
    "    \n",
    "    # Erstelle Buckets\n",
    "    bucket_range = (max_val - min_val) / 10\n",
    "    buckets = [[] for _ in range(10)]\n",
    "    \n",
    "    # Verteile Elemente in Buckets\n",
    "    for num in arr:\n",
    "        index = min(int((num - min_val) / bucket_range), 9)\n",
    "        buckets[index].append(num)\n",
    "    \n",
    "    # Sortiere jeden Bucket und kombiniere das Ergebnis\n",
    "    sorted_arr = []\n",
    "    for bucket in buckets:\n",
    "        sorted_arr.extend(sorted(bucket))\n",
    "    \n",
    "    return sorted_arr\n",
    "\n",
    "# Hauptprogramm\n",
    "filename = 'numbers.csv'\n",
    "\n",
    "# Importiere Daten\n",
    "print(\"Importiere Daten...\")\n",
    "try:\n",
    "    numbers = import_data(filename)\n",
    "    print(f\"Anzahl der importierten Zahlen: {len(numbers)}\")\n",
    "\n",
    "    # Sortiere und messe die Zeit\n",
    "    print(\"Starte Sortierung...\")\n",
    "    start_time = time.time()\n",
    "    sorted_numbers = bucket_sort(numbers)\n",
    "    end_time = time.time()\n",
    "\n",
    "    # Berechne und gib die Berechnungszeit aus\n",
    "    computation_time = end_time - start_time\n",
    "    print(f\"Sortierung abgeschlossen. Berechnungszeit: {computation_time:.4f} Sekunden\")\n",
    "\n",
    "    # Überprüfe, ob die Sortierung korrekt ist\n",
    "    print(\"Überprüfe Sortierung...\")\n",
    "    is_sorted = all(sorted_numbers[i] <= sorted_numbers[i+1] for i in range(len(sorted_numbers)-1))\n",
    "    print(f\"Sortierung korrekt: {is_sorted}\")\n",
    "\n",
    "    # Zeige die ersten und letzten 5 Elemente der sortierten Liste\n",
    "    print(\"\\nErste 5 Elemente:\", sorted_numbers[:5])\n",
    "    print(\"Letzte 5 Elemente:\", sorted_numbers[-5:])\n",
    "\n",
    "except FileNotFoundError as e:\n",
    "    print(f\"Fehler: {e}\")\n",
    "    print(\"Bitte überprüfen Sie den Dateipfad und stellen Sie sicher, dass die Datei existiert.\")"
   ]
